<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@color/gray_600</item>
        <item name="materialButtonStyle">@style/MaterialButton</item>
        <item name="android:textViewStyle">@style/Material.TextView</item>
    </style>

    <style name="Material.TextView" parent="">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:insetBottom">2dp</item>
    </style>

    <style name="MaterialOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="strokeColor">@color/color_primary</item>
    </style>

    <!-- TextInputLayout. -->
    <style name="TextInputLayoutAppearance" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_400</item>
        <item name="colorControlNormal">@color/gray_600</item>
        <item name="colorControlActivated">@color/color_primary</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="TextInputLayoutAppearance.OutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

    <style name="TextInputLayoutAppearance.OutlineBox.Disabled" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:enabled">false</item>
        <item name="boxBackgroundColor">@color/gray_300</item>
    </style>

    <style name="Item.Clickable" parent="">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="TextView.SubTitle" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
