<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">


    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Item.Clickable">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_image"
            android:layout_gravity="start"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/ic_account_circle"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/user_image"
            android:layout_marginStart="20dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                android:text="Sandra"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text_take"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_user_name"
                android:textColor="@color/gray_500"
                android:text="Levarei:"
                android:layout_marginTop="4dp"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/text_take_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/text_take"
                android:layout_below="@id/text_user_name"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="08/09/2019"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_take_date"
                android:textColor="@color/gray_500"
                android:text="Buscarei:"
                android:layout_marginTop="4dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_get_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/text_get"
                android:layout_below="@+id/text_take_date"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:text="08/25/2019"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerInParent="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/statusColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:textColor="@color/gray_100"
                app:chipBackgroundColor="@color/yellow"
                android:text="Em aberto"
                app:rippleColor="@color/transparent"
                android:textSize="12sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_below="@id/layout_booking"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/gray_300"/>

</RelativeLayout>