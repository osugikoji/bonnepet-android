<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/layout_booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Item.Clickable">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_image"
            android:layout_gravity="start"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/ic_account_circle"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/user_image"
            android:layout_marginStart="20dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                android:text="Sandra"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_user_name"
                android:text="Campinas"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_city"
                android:text="BarÃ£o Geraldo"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:textSize="14sp"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/statusColor"
            android:layout_width="3dp"
            android:layout_marginEnd="7dp"
            android:layout_height="60dp"
            android:background="@color/light_red"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <View
        android:layout_below="@id/layout_booking"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/light_gray"/>

</RelativeLayout>